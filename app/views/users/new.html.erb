<p id="notice"><%= notice %></p>

<h1>Crear nuevo usuario</h1>

<%= form_with(model: @user, url:users_path,local:true) do |form|%>
  <%=form.label :name  %><br>
  <%=form.text_field :name  %> <br><br>

<%=form.label :email  %><br>
<%=form.text_field :email  %> <br><br>

<%=form.label :password  %><br>
<%=form.password_field :password_digest  %><br><br>

<%= form.submit 'Registrar' , class: "btn btn-primary"  %> <br>
<%end%>
